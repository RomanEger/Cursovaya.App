<Window x:Class="CursovayaApp.WPF.Views.Windows.ChoosePublishing"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CursovayaApp.WPF.Views.Windows"
        mc:Ignorable="d"
        Title="ChoosePublishing" Height="150" Width="400">
    <Grid>
        <StackPanel
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Margin="15">
            <ComboBox
                Width="200"
                Height="35"
                SelectedItem="{Binding SelectedPublishing}"
                ItemsSource="{Binding ListPublishings}"/>
            <Button
                Width="100"
                Style="{StaticResource SecondaryButtonStyle}"
                Content="Выбрать"
                Command="{Binding AddPublishingCommand}"/>
        </StackPanel>
    </Grid>
</Window>
