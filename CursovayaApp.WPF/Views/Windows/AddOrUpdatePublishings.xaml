<Window x:Class="CursovayaApp.WPF.Views.AddOrUpdatePublishings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CursovayaApp.WPF.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Title="AddOrUpdatePublishings" Height="100" Width="480">
    <Grid>
        <StackPanel>
            <StackPanel 
                Margin="10 15"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Label Content="Название:"
                       VerticalAlignment="Center"/>
                <TextBox 
                    DataContext="{Binding Publishing}"
                    Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0"
                    Style="{StaticResource TbLoginStyle}"/>

            <Button
                    Content="Сохранить"
                    Style="{StaticResource MainButtonStyle}"
                    Command="{Binding SaveCommand}"
                    Width="110"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
