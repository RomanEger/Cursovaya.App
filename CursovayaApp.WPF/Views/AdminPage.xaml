        <Style TargetType="Button" BasedOn="{StaticResource BaseStyle}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="15 0"/>
            <Setter Property="Margin" Value="15 15 15 0"/>
        </Style>
        
